extends layout

block content
  .container
    p
      a(href='/') Back
      
    h2 Sign In:
    .row
      form.form-horizontal(method='post', action='/auth/signin')
        .form-group
          label.col-sm-2.control-label(for='name') Name:
          .col-sm-8
            input#name.form-control(type='text', name='name')
        .form-group
          label.col-sm-2.control-label(for='email') Email:
          .col-sm-8
            input#email.form-control(type='email', name='email')
        .form-group
          label.col-sm-2.control-label(for='password') Password: 
          .col-sm-8
            input#password.form-control(type='password', name='password')
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-default(type='submit') Signin

    h2 Sign Up:
    .row
      if errors
        include ./includes/errors.jade
      form.form-horizontal(method='post', action='/auth')
        .form-group
          label.col-sm-2.control-label(for='name') Name:
          .col-sm-8
            input#name.form-control(type='text', name='name')
        .form-group
          label.col-sm-2.control-label(for='email') Email:
          .col-sm-8
            input#email.form-control(type='email', name='email')
        .form-group
          label.col-sm-2.control-label(for='password') Password: 
          .col-sm-8
            input#password.form-control(type='password', name='password')
        .form-group
          label.col-sm-2.control-label(for='repassword') Confirm Password: 
          .col-sm-8
            input#repassword.form-control(type='password', name='repassword')
        .form-group
          .col-sm-offset-2.col-sm-8
            button.btn.btn-default(type='submit') Signup
