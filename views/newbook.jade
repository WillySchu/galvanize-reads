extends layout

block content
  include ./includes/header.jade
  div(class="flex-container")
    include ./includes/sidebar.jade

    div.container
      div.row
        div.col-md-6.col-md-offset-1
          form(action="/books" method="POST")
            div.form-group
              label First Author
                select.form-control(type="text" name="author1")
                  
            div.form-group
              label Second Author
                input.form-control(type="text" name="author2" placeholder="Optional")
            div.form-group
              label Third Author
                input.form-control(type="text" name="author3" placeholder="Optional")
            div.form-group
              label Title
                input.form-control(type="text" name="title" placeholder="King Lear")
            div.form-group
              label genre
                input.form-control(type="text" name="genre" placeholder="Tragedy")
            div.form-group
              label Description
                textarea.form-control(rows="5" name="description")
            div.form-group
              label Cover URL
                input.form-control(type="text" name="coverUrl" placeholder="http://example.url")
            div.form-group
              button.submit Submit
