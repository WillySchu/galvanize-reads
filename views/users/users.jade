extends ../layout

block content
  .buffer
  .container.bootstrap.snippet
      .row
        .col-lg-12
          .table-responsive
            table.table.user-list
              thead
                tr
                  th
                    span User
                  th
                    span Created
                  th.text-center
                    span Status
                  th
                    span Email
                  th Â 
              tbody
                each user in users
                  tr
                    td
                      img(src='#{user.thumb_url ? user.thumb_url : "http://bootdey.com/img/Content/user_1.jpg"}', alt='#{user.name}')
                      a.user-link(href='/users/#{user.id}')= user.name
                      span.user-subhead #{user.is_admin ? "Admin" : "Member"}
                    td= user.joined
                    td.text-center
                      span.label.label-default pending
                    td
                      a(href='#') #{user.email}
                    td(style='width: 20%;')
                      a.table-link(href='/users/#{user.id}')
                        span.fa-stack.glyphicon.glyphicon-pencil
                      a#delete-user.table-link.danger(href='/users/#{user.id}')
                        span.fa-stack.glyphicon.glyphicon-remove
      hr.featurette-divider
      include ../includes/footer.jade
    script(src='/javascripts/delete.js')
