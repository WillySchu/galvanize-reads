extends ../layout

block content
  .buffer
  .container
    form.form-horizontal(action='/books', method='POST')
      .row
        fieldset
          legend New Book
        if errors
          include ../includes/errors.jade
      .row
        .col-md-6
          .control-group
            label.control-label(for='title') Title
            .controls
              input.form-control.input-lg(type='text', name='title', placeholder='King Lear' value='#{b.title ? b.title : ""}')
              p.help-block Please enter the book's title
          .control-group
            label.control-label(for='author1') Author
            .controls
              select#author1.form-control.input-lg(type='text', name='author1')
                each authorbook in authorbooks
                  option(val='#{authorbook.author.first_name} #{authorbook.author.last_name}')= authorbook.author.first_name + ' ' + authorbook.author.last_name
              p.help-block Please select an author
          .control-group#secondAuthor
            .controls
              button#moreAuthor.btn.btn-default(type='button') Add Second Author
        .col-md-6
          .control-group
            label.control-label(for='genre') Genre
            .controls
              input.form-control.input-lg(type='text', name='genre', placeholder='Tragedy' value='#{b.genre ? b.genre : ""}')
              p.help-block Please enter a genre
          .control-group
            label.control-label(for='cover_url') Cover URL
            .controls
              input.form-control.input-lg(type='text', name='cover_url', placeholder='http://example.com' value='#{b.cover_url ? b.cover_url : ""}')
              p.help-block Please enter a url
          .control-group
            label.control-label(for='description') Description
            .controls
              textarea.form-control.input-lg(type='text', name='description', placeholder='blah, blah, blah' rows=6)= b.description
              p.help-block Please enter a brief description of the book
      .row
        .control-group
          .controls
            button.btn.btn-success(type='submit') Submit
    hr.featurette-divider
    include ../includes/footer.jade
  script(src='/javascripts/newbook.js')
